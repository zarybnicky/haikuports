SubDir TOP dev-util git ;

PortDepends dev-util/git : dev-libs/expat ;
PortDepends dev-util/git : net-misc/curl ;

MAKEFLAGS on dev-util/git = $(MAKEFLAGS)
prefix=$(PREFIX)
NO_R_TO_GCC_LINKER=YesPlease
NO_MEMMEM=YesPlease
NO_MKDTEMP=YesPlease
NO_MKSTEMPS=YesPlease
NO_IPV6=YesPlease
NO_TCLTK=YesPlease
NEEDS_LIBICONV=YesPlease
PTHREAD_LIBS=
CURLDIR=$(DESTDIR)$(PREFIX)
PERL_PATH=`which perl`
CFLAGS=\"-g -O2 $(CPPFLAGS) $(CFLAGS) -I/boot/develop/headers/3rdparty -I$(DESTDIR)$(PREFIX)/include\"
LDFLAGS=\"$(LDFLAGS:J=" ") -L$(DESTDIR)$(PREFIX)/lib -lnetwork -lbsd\"
CC=\"$(CC)\"
NO_OPENSSL=YesPlease #XXX
;
if $(OS) != HAIKU {
#	MAKEFLAGS on dev-util/git += NO_PERL_MAKEMAKER=YesPlease ;
}

MakeIgnored dev-util/git ;
Make dev-util/git ;

MakeInstall dev-util/git ;
